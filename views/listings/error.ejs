<% layout("layouts/biolerplate.ejs") %>

<style>
  .error-container {
    text-align: center;
    padding: 60px 20px;
  }

  .error-container h1 {
    font-size: 5rem;
    color: #ff4d4d;
    margin-bottom: 20px;
  }

  .error-container p {
    font-size: 1.5rem;
    color: #333;
  }

  .error-container a {
    display: inline-block;
    margin-top: 30px;
    padding: 12px 24px;
    background-color: #ff4d4d;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s;
  }

  .error-container a:hover {
    background-color: #e60000;
  }
</style>

<div class="error-container">
  <h1><%= statusCode || 500 %></h1>
  <p><%= message || "Something went wrong!" %></p>
  <a href="/listings">Back to Home</a>
</div>
