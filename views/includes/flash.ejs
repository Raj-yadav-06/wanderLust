<% if (success && success.length > 0) { %>
  <div class="flash-message success">
    <span><%= success %></span>
    <button class="close-btn" onclick="this.parentElement.style.display='none';">&times;</button>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="flash-message error">
    <span><%= error %></span>
    <button class="close-btn" onclick="this.parentElement.style.display='none';">&times;</button>
  </div>
<% } %>
